<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.viettel.dms.ui.fragment.SettingsFragment">

    <LinearLayout
        android:id="@+id/ll_Change_Theme"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.joanzapata.iconify.widget.IconTextView
            android:layout_width="@dimen/list_tile_height_avatar_text_icon"
            android:layout_height="@dimen/list_tile_height_avatar_text_icon"
            android:gravity="center"
            android:text="{md-color-lens 24dp}"
            android:textColor="@color/Black54">

        </com.joanzapata.iconify.widget.IconTextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/settings_change_themes"
                    android:textAppearance="@style/TextAppearance.Regular.16.Black87" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tvThemesPrimary"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary1" />

                    <TextView
                        android:id="@+id/tvThemesSecondary"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:background="@color/colorSecondary1" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_Change_Language"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.joanzapata.iconify.widget.IconTextView
            android:layout_width="@dimen/list_tile_height_avatar_text_icon"
            android:layout_height="@dimen/list_tile_height_avatar_text_icon"
            android:gravity="center"
            android:text="{md-language 24dp}"
            android:textColor="@color/Black54">

        </com.joanzapata.iconify.widget.IconTextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/settings_change_language"
                    android:textAppearance="@style/TextAppearance.Regular.16.Black87" />

                <TextView
                    android:id="@+id/tvLanguage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Medium.14.Black54" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_Change_Map"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.joanzapata.iconify.widget.IconTextView
            android:layout_width="@dimen/list_tile_height_avatar_text_icon"
            android:layout_height="@dimen/list_tile_height_avatar_text_icon"
            android:gravity="center"
            android:text="{md-map 24dp}"
            android:textColor="@color/Black54">

        </com.joanzapata.iconify.widget.IconTextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/settings_change_map"
                    android:textAppearance="@style/TextAppearance.Regular.16.Black87" />

                <TextView
                    android:id="@+id/tvMap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Medium.14.Black54" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_Change_Info"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.joanzapata.iconify.widget.IconTextView
            android:layout_width="@dimen/list_tile_height_avatar_text_icon"
            android:layout_height="@dimen/list_tile_height_avatar_text_icon"
            android:gravity="center"
            android:text="{md-info-outline 24dp}"
            android:textColor="@color/Black54">

        </com.joanzapata.iconify.widget.IconTextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/settings_info"
                android:textAppearance="@style/TextAppearance.Regular.16.Black87" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
