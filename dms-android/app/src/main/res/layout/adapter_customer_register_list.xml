<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_tile_height_three_line"
    android:gravity="center_vertical"
    android:orientation="horizontal">


    <RelativeLayout
        android:layout_width="72dp"
        android:layout_height="match_parent"
        android:gravity="center">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_Circle"
            android:layout_width="@dimen/list_avatar_circle_size"
            android:layout_height="@dimen/list_avatar_circle_size"
            android:layout_marginLeft="@dimen/list_avatar_circle_padding"
            android:layout_marginRight="@dimen/list_avatar_circle_padding"
            android:src="#000000" />

        <TextView
            android:id="@+id/tv_First_Letter"
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_avatar_circle_size"
            android:layout_marginLeft="@dimen/list_avatar_circle_padding"
            android:layout_marginRight="@dimen/list_avatar_circle_padding"
            android:gravity="center"
            android:text="A"
            android:textAppearance="@style/TextAppearance.Light.24.White" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="top|left"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_Customer_Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_standard"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="aaaa"
            android:textAppearance="@style/TextAppearance.Regular.16.Black87" />

        <TextView
            android:id="@+id/tv_Address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="bbbb"
            android:textAppearance="@style/TextAppearance.Regular.14.Black54" />

        <TextView
            android:id="@+id/tv_Phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="cccc"
            android:textAppearance="@style/TextAppearance.Regular.14.Black54" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="@dimen/second_keyline"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/margin_standard"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_Create_Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="cc"
            android:textAppearance="@style/TextAppearance.Regular.12.Black26" />

        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/itv_Approve_Status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/margin_standard"
            android:text="{md-done @dimen/list_icon_size}" />
    </RelativeLayout>

</LinearLayout>

