<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    >

    <View
        android:id="@+id/border"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="72dp"
        android:layout_alignParentBottom="true"
        android:background="#e0e0e0"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:gravity="center">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_circle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:src="#000000"
                />

            <TextView
                android:id="@+id/tv_first_letter"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.Light.24.White"
                />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="top"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_customer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:lineSpacingMultiplier="1.15"
                android:maxLines="2"
                android:ellipsize="end"
                android:textAppearance="@style/TextAppearance.Regular.16.Black87" />

            <TextView
                android:id="@+id/txt_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:visibility="gone"
                android:textAppearance="@style/TextAppearance.Regular.14.Black54" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_revenue"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:paddingTop="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp"
            android:gravity="top|right"
            android:maxLines="1"
            android:textAppearance="@style/TextAppearance.Regular.14.PrimaryColor" />

    </LinearLayout>

</RelativeLayout>


