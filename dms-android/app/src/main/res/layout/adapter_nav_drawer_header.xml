<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/navigation_drawer_header_height"
        android:layout_marginBottom="@dimen/margin_between_content_area"
        android:background="@drawable/drawer_background"
        android:paddingLeft="@dimen/navigation_drawer_margin_horizontal"
        android:paddingRight="@dimen/navigation_drawer_margin_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="@dimen/navigation_drawer_margin_top"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical">


                <ImageView
                    android:id="@+id/imgLogo"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    />

                <TextView
                    android:id="@+id/tvClientName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textAppearance="@style/TextAppearance.Navigation.Drawer.Company.Name" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvFullname"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/navigation_drawer_subtitle_height"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:gravity="center_vertical|left"
                    android:textAppearance="@style/TextAppearance.Regular.14.White" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>