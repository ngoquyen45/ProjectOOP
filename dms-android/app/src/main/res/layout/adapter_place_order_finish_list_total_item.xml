<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:orientation="vertical"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/second_keyline"
        android:background="@color/Black12"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/second_keyline"
        android:layout_marginRight="@dimen/margin_standard"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.28"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/list_tile_height_text_single_line"
                    android:gravity="center_vertical|left"
                    android:text="@string/place_order_detail_total_table_1"
                    android:textAppearance="@style/TextAppearance.Regular.14.PrimaryColor"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/list_tile_height_text_single_line"
                    android:gravity="center_vertical|left"
                    android:text="@string/place_order_detail_total_table_2"
                    android:textAppearance="@style/TextAppearance.Regular.14.PrimaryColor"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/list_tile_height_text_single_line"
                    android:gravity="center_vertical|left"
                    android:text="@string/place_order_detail_total_table_3"
                    android:textAppearance="@style/TextAppearance.Regular.14.PrimaryColor"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/list_tile_height_text_single_line"
                    android:gravity="center_vertical|left"
                    android:text="@string/place_order_detail_total_table_4"
                    android:textAppearance="@style/TextAppearance.Regular.14.PrimaryColor"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/tv_Total_Amount"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center_vertical|right"
                    android:textAppearance="@style/TextAppearance.Regular.16.Black87"
                    />

                <TextView
                    android:id="@+id/tv_Promotion_Amount"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center_vertical|right"
                    android:textAppearance="@style/TextAppearance.Regular.16.Black87"
                    />

                <TextView
                    android:id="@+id/tv_Discount_Amount"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_place_order_product_list_edit_quantity"
                    android:gravity="center_vertical|right"
                    android:textAppearance="@style/TextAppearance.Regular.16.Black87"
                    />

                <TextView
                    android:id="@+id/tv_Total_Payment"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center_vertical|right"
                    android:textAppearance="@style/TextAppearance.Regular.16.Black87"
                    />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>