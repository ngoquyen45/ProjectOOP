<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.viettel.dms.ui.fragment.PlaceOrderPromotionFragment">

    <include
        layout="@layout/view_sub_toolbar_place_order"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <com.viettel.dms.helper.layout.GeneralSwipeRefreshLayout
            android:id="@+id/swipe_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/margin_short"
            android:layout_marginTop="@dimen/margin_short">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_Order_Promotion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </com.viettel.dms.helper.layout.GeneralSwipeRefreshLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/drawer_shadow_top"/>
    </RelativeLayout>

</LinearLayout>
