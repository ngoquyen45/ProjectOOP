<resources>

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowDisablePreview">true</item>
        <item name="activityBackground">@color/white</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <!--<style name="AppTheme" parent="AppBaseTheme">-->
        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <!--<item name="colorAccent">@color/colorPrimaryDark</item>-->
        <!--<item name="android:windowBackground">@color/colorPrimaryLight</item>-->
        <!--<item name="drawerArrowStyle">@style/DrawerArrowStyle</item>-->

    <!--</style>-->

    <style name="AppTheme.AppCompat.Responsive" parent="ThemeOverlay.AppCompat.Dark">
        <item name="toolbarStyle">@style/Custom.Widget.Toolbar</item>
        <item name="toolbarNavigationButtonStyle">@style/Custom.Widget.Toolbar.Button.Navigation
        </item>
        <item name="actionOverflowButtonStyle">@style/Custom.Widget.ActionButton.Overflow</item>
        <item name="colorControlNormal">#FFFFFF</item>
    </style>

    <style name="Custom.Widget.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="maxButtonHeight">48dp</item>
        <item name="android:paddingLeft">@dimen/toolbar_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/toolbar_horizontal_padding</item>
        <item name="contentInsetStart">@dimen/first_keyline</item>
    </style>

    <style name="Custom.Widget.Toolbar.Button.Navigation" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">48dp</item>
    </style>

    <style name="Custom.Widget.ActionButton.Overflow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>
    <!-- Search view -->
    <style name="MyThemeOverlay.ActionBar" parent="AppTheme.AppCompat.Responsive">
        <item name="searchViewStyle">@style/AppTheme.SearchView</item>
        <item name="android:autoCompleteTextViewStyle">@style/AppTheme.AutoCompleteTextView</item>
    </style>

    <style name="AppTheme.AppCompat.Responsive.SearchView.FullWidth" parent="MyThemeOverlay.ActionBar">
        <item name="searchViewStyle">@style/AppTheme.SearchView.FullWidth</item>
    </style>

    <style name="AppTheme.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="layout">@layout/search_view</item>
        <item name="queryBackground">@drawable/card_frame_normal</item>
        <item name="searchIcon">@drawable/abc_ic_search_api_mtrl_alpha</item>
    </style>

    <style name="AppTheme.SearchView.FullWidth" parent="AppTheme.SearchView">
        <item name="android:maxWidth">10000dp</item>
    </style>

    <style name="AppTheme.AutoCompleteTextView" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textColor">#DE000000</item>
        <item name="android:textSize">14sp</item>
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
    </style>
    <!-- -->
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="AppTheme.AutoCompleteTextAppearence" parent="TextAppearance.Roboto.Regular">
        <item name="android:textColor">#8A000000</item>
        <item name="android:textSize">14sp</item>
    </style>


    <!-- Rating Star Style -->
    <style name="myRatingBar" parent="android:Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_style_ratingbar</item>
        <item name="android:minHeight">24dp</item>
        <item name="android:minWidth">24dp</item>
    </style>

    <!-- Button Style -->
    <style name="LightFlatColorButtonRippleStyle" parent="Material.Drawable.Ripple.Touch.Light">
        <item name="android:background">@null</item>
        <item name="rd_cornerRadius">4dp</item>
        <item name="rd_delayClick">afterRelease</item>
        <item name="android:textAppearance">@style/TextAppearance.Medium.14</item>
        <item name="android:textColor">?colorPrimary</item>
    </style>

    <!-- Load More Circle progress -->
    <style name="LoadMoreCircleProgressStyle" parent="Material.Drawable.CircularProgress">
        <item name="cpd_inStepColors">@array/refresh_progress</item>
    </style>

    <style name="NormalProgressBar" parent="Material.Drawable.CircularProgress">
        <item name="cpd_strokeColor">@color/white</item>
    </style>
    <!-- Spinner -->
    <style name="MaterialSpinner" parent="Material.Widget.Spinner">
        <item name="spn_dividerColor">@color/Black12</item>
        <item name="spn_dividerHeight">1.5dp</item>
        <item name="spn_dividerPadding">4dp</item>
        <item name="spn_labelEnable">false</item>
        <item name="spn_arrowColor">?colorPrimary</item>
        <item name="spn_arrowSize">6dp</item>
        <item name="spn_arrowPadding">6dp</item>
        <item name="spn_arrowSwitchMode">true</item>
        <item name="spn_arrowAnimClockwise">true</item>
        <item name="spn_arrowAnimDuration">100</item>
    </style>

</resources>
