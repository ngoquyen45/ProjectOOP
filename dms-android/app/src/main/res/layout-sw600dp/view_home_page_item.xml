<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="138dp"
    android:orientation="horizontal"
    android:background="#FFF">

    <LinearLayout
        android:layout_width="173dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        >
        
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:gravity="center_vertical|right"
            android:textAppearance="@style/TextAppearance.CondensedRegular.30.Black54"
            android:text="DOANH Sá»"
            />

        <TextView
            android:id="@+id/tvPercentage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="center_vertical|right"
            android:textAppearance="@style/TextAppearance.CondensedRegular.48.PrimaryColor"
            android:text="42,8%"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="32dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical|right"
        >

        <ImageView
            android:id="@+id/imgDivider"
            android:layout_width="wrap_content"
            android:layout_height="76dp"
            android:src="@drawable/ic_home_page_divider"
            android:scaleType="centerInside"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        >

        <LinearLayout
            android:id="@+id/layoutCompletedLabel"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginBottom="1dp"
            >

            <TextView
                android:id="@+id/tvCompleted"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textAppearance="@style/TextAppearance.CondensedRegular.18.PrimaryColor"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:text="120.200.000"
                />

            <View
                android:id="@+id/indicatorCompleted"
                android:layout_width="40dp"
                android:layout_height="19dp"
                android:layout_gravity="bottom"
                android:background="@drawable/bg_home_page_indicator_top"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:orientation="horizontal"
            android:weightSum="1"
            >

            <View
                android:id="@+id/chartCompleted"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:background="#00a9b6"
                />

            <View
                android:id="@+id/chartCompletedStack"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="1"
            >

            <View
                android:id="@+id/chartPlan"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:background="#00a9b6"
                />

            <View
                android:id="@+id/chartPlanStack"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutPlanLabel"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginTop="1dp"
            >

            <TextView
                android:id="@+id/tvPlan"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:textAppearance="@style/TextAppearance.CondensedRegular.18.SecondaryColor"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:text="120.200.000"
                />

            <View
                android:id="@+id/indicatorPlan"
                android:layout_width="40dp"
                android:layout_height="19dp"
                android:background="@drawable/bg_home_page_indicator_top"
                />

        </LinearLayout>

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/button"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:layout_marginLeft="24dp"
        android:layout_gravity="center_vertical"
        app:cardCornerRadius="3dp"
        app:cardBackgroundColor="#00a9b6"
        app:cardUseCompatPadding="true"
        >

        <!--ImageView
            android:id="@+id/imageView"
            android:src="@drawable/ic_calendar_black_64dp"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical|center_horizontal"
            /-->

    </android.support.v7.widget.CardView>

</LinearLayout>