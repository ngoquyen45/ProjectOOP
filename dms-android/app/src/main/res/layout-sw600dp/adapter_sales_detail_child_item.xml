<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/Grey98"
    >
    <View
        android:id="@+id/shadow_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/drawer_shadow_top"
        />

    <View
        android:id="@+id/border_bottom_end"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#f3f3f3"
        />

    <View
        android:id="@+id/border_bottom_normal"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="104dp"
        android:background="#e6e6e6"
        />

    <LinearLayout
        android:id="@+id/id_real_child_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="104dp"
        android:paddingRight="80dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_order_date"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:textAppearance="@style/TextAppearance.Regular.14.Black54" />

        <TextView
            android:id="@+id/tv_total"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|right"
            android:textAppearance="@style/TextAppearance.Regular.14.Black54" />

    </LinearLayout>

</RelativeLayout>

