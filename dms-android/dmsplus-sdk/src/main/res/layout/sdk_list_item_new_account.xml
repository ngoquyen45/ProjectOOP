<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="@dimen/sdk_collaboration_cell_height">
    <ImageView
        android:layout_width="@dimen/sdk_collaboration_thumb_size"
        android:layout_height="@dimen/sdk_collaboration_thumb_size"
        android:layout_marginLeft="@dimen/sdk_keyline_margin"
        android:layout_marginRight="@dimen/sdk_keyline_margin"
        android:src="@drawable/sdk_ic_add_grey_24dp"
        android:gravity="center"
        android:scaleType="center"
        android:layout_gravity="center"
        />
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <TextView
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@color/sdk_primary_text"
            android:text="@string/sdk_Use_a_different_account"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>