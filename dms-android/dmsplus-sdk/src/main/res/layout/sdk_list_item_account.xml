<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="@dimen/sdk_collaboration_cell_height">
    <TextView
        android:id="@+id/sdk_account_initials"
        android:layout_width="@dimen/sdk_collaboration_thumb_size"
        android:layout_height="@dimen/sdk_collaboration_thumb_size"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:layout_marginLeft="@dimen/sdk_keyline_margin"
        android:layout_marginRight="@dimen/sdk_keyline_margin"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_gravity="center"
        />
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <TextView
            android:id="@+id/sdk_account_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@color/sdk_primary_text"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/sdk_account_description"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/sdk_hint_foreground"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoText="false" />
    </LinearLayout>
</LinearLayout>